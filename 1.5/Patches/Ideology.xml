<?xml version="1.0" encoding="UTF-8"?>
<Patch>
  <Operation Class="PatchOperationFindMod">
    <mods>
      <li>Ideology</li>
    </mods>
    <match Class="PatchOperationSequence">
      <operations>
        <!-- RangedHeavy-->
        <li Class="PatchOperationAdd">
          <xpath>/Defs/ThingDef[defName="VWE_Gun_TearGasLauncher"]</xpath>
          <value>
            <weaponClasses>
              <li>RangedHeavy</li>
            </weaponClasses>
          </value>
        </li>
        <!-- RangedLight -->
        <li Class="PatchOperationAdd">
          <xpath>/Defs/ThingDef[defName="VWE_Gun_RubberBulletPistol"]</xpath>
          <value>
            <weaponClasses>
              <li>RangedLight</li>
            </weaponClasses>
          </value>
        </li>
        <!-- ShortShots < 19.9 range -->
        <li Class="PatchOperationAdd">
          <xpath>/Defs/ThingDef[defName="VWE_Gun_Taser"]</xpath>
          <value>
            <weaponClasses>
              <li>RangedLight</li>
              <li>ShortShots</li>
            </weaponClasses>
          </value>
        </li>
        <!-- LongShots > 35 range -->
        <li Class="PatchOperationAdd">
          <xpath>/Defs/ThingDef[defName="VWE_Gun_DartGun"]</xpath>
          <value>
            <weaponClasses>
              <li>LongShots</li>
            </weaponClasses>
          </value>
        </li>
        <li Class="PatchOperationAdd">
          <xpath>/Defs/ThingDef[defName="VWE_MeleeWeapon_StunBaton"]</xpath>
          <value>
            <weaponClasses>
              <li>Melee</li>
            </weaponClasses>
          </value>
        </li>
      </operations>
    </match>
  </Operation>
</Patch>